@model MovieApp.ViewModels.CreateCustomerMoel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post" asp-action="Create" asp-controller="Customer">

    <div class="form-group row">

        <div class="col-4">
            <label asp-for="Name"></label>

            <input asp-for="Name" />
        </div>


    </div>

    <div class="form-group row ">

        <div class="col-4">

            <label asp-for="MembershipType"></label>

            <select asp-for="MembershipTypeId" asp-items="@Model.TypeList">
                <option>Please select one</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter)  Subscribed to Newsletter?


        </div>
    </div>

    <div class="form-group row">
        <div class="col-4">
            <button type="submit" class=" btn btn-primary"> Submit</button>
        </div>
    </div>

</form>